<time id="clock">dd, YYYY-MM-DD, HH:mm:ss</time>

<script>
  const updateClock = (clock: HTMLTimeElement) => {
    const now = new Date();
    const weekday = now.toLocaleDateString("en-US", { weekday: "long" }).slice(0, 2);

    const year = now.getFullYear().toString();
    const month = (now.getMonth() + 1).toString().padStart(2, "0");
    const day = now.getDate().toString().padStart(2, "0");
    const date = [year, month, day].join("-");

    const hours = now.getHours().toString().padStart(2, "0");
    const minutes = now.getMinutes().toString().padStart(2, "0");
    const seconds = now.getSeconds().toString().padStart(2, "0");
    const time = [hours, minutes, seconds].join(":");

    clock.dateTime = now.toISOString();
    clock.textContent = [weekday, date, time].join(", ");
  };
  const clock = document.querySelector<HTMLTimeElement>("#clock");
  if (clock) {
    updateClock(clock);
    setInterval(() => updateClock(clock), 1000);
  }
</script>
