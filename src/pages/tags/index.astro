---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("posts");
const tags = [...new Set(posts.map((post) => post.data.tags ?? []).flat())];
let postsWithTag: Record<string, number> = {};
for (const tag of tags) {
  postsWithTag[tag] = posts.filter((post) =>
    post.data.tags?.includes(tag)
  ).length;
}
---

<BaseLayout
  title="Tags â€” Efim.ish"
  description="These are all the tags found in blog posts"
>
  <h1>List of all tags</h1>
  {
    tags.map((tag) => (
      <p>
        <a href={encodeURI(`/tags/${tag}`)}>
          #{tag} ({postsWithTag[tag]})
        </a>
      </p>
    ))
  }
</BaseLayout>
