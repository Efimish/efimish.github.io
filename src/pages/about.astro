---
import type { WithContext, Person, ProfilePage } from "schema-dts";
import {
  firstname,
  lastname,
  fullname,
  username,
  gender,
  pronouns,
  email,
  github,
} from "@scripts/consts";
import BaseLayout from "@layouts/BaseLayout.astro";

const description = `About ${fullname}, an open-source developer and thinker passionate about technology and privacy.`;

const person = {
  "@context": "https://schema.org",
  "@type": "Person",
  "@id": new URL("/#person", Astro.url.origin).href,
  url: Astro.url.href,
  givenName: firstname,
  familyName: lastname,
  name: fullname,
  alternateName: username,
  gender: gender,
  email: `mailto:${email}`,
  sameAs: [github],
} satisfies WithContext<Person>;

const profile = {
  "@context": "https://schema.org",
  "@type": "ProfilePage",
  url: Astro.url.href,
  name: "About",
  mainEntity: {
    "@id": new URL("/#person", Astro.url.origin).href,
  },
} satisfies WithContext<ProfilePage>;
---

<BaseLayout title="About" description={description}>
  <Fragment slot="og">
    <meta property="og:type" content="profile" />
    <meta property="profile:first_name" content={firstname} />
    <meta property="profile:last_name" content={lastname} />
    <meta property="profile:username" content={username} />
    <meta property="profile:gender" content={gender.toLowerCase()} />
  </Fragment>
  <Fragment slot="jsonld">
    <script type="application/ld+json" set:html={JSON.stringify(person)} />
    <script type="application/ld+json" set:html={JSON.stringify(profile)} />
  </Fragment>
  <header>
    <h1>About</h1>
    <p>Hello, traveler!</p>
    <p>
      I am {fullname} ({pronouns}). I am passionate about technology, privacy
      and open source development. I am from Krasnoyarsk, Russia.
    </p>
  </header>
  <section>
    <h2>üõ†Ô∏è Skills</h2>
    <ul>
      <li>TypeScript, Rust, Python, SQL</li>
      <li>Astro</li>
      <li>Git, Docker, PostgreSQL, Caddy</li>
      <li>GitHub Actions</li>
    </ul>
  </section>
  <section>
    <h2>üìö Education</h2>
    <p>Siberian Federal University - B.Sc. in Computer Science, 2023-2027</p>
  </section>
</BaseLayout>
