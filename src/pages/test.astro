---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("posts");
---

<BaseLayout title="Test page" description="The page for testing">
  <pre>
      URL: {Astro.url}
      URL origin: {Astro.url.origin}
      Site: {Astro.site}
      Image: {new URL("favicon-512.png", Astro.url)}
      One post: {JSON.stringify(posts[0], null, 2)}
  </pre>
</BaseLayout>
